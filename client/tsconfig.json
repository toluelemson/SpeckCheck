{
  "compilerOptions": {
    "target": "es5",
    "module": "es2020",
    "lib": ["dom", "es2015", "es2015.promise", "es2020"],
    "jsx": "react",
    "typeRoots": ["./types", "./node_modules/@types"],
    "strict": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "outDir": "build"
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
